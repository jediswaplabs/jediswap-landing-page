{
  "name": "jediswap-landing-page",
  "version": "1.0.0",
  "description": "Landing page for JediSwap",
  "main": "index.js",
  "scripts": {
    "watch-css": "nodemon -e scss -x \"yarn sass\"",
    "sass": "sass styles/scss/index.scss styles/css/index.css -w",
    "dev": "concurrently --kill-others \"yarn watch-css\" \"lite-server\"",
    "prebuild": "yarn build:clean && yarn build:mkdirs",
    "build": "yarn build:sass && yarn build:copy-assets && yarn build:copy-html && yarn build:copy-js",
    "build:clean": "rimraf dist",
    "build:mkdirs": "mkdir -p dist/scripts && mkdir -p dist/styles && mkdir -p dist/assets",
    "build:sass": "sass --no-source-map styles/scss/index.scss dist/styles/css/index.css",
    "build:copy-assets": "cp -r assets/* dist/assets",
    "build:copy-html": "cp index.html dist/",
    "build:copy-js": "cp -r scripts/* dist/scripts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/meshfinance/jediswap-landing-page.git"
  },
  "keywords": [],
  "author": "dhruvkelawala",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jediswaplabs/jediswap-landing-page/issues"
  },
  "homepage": "https://github.com/jediswaplabs/jediswap-landing-page",
  "dependencies": {
    "sass": "^1.49.9"
  },
  "devDependencies": {
    "concurrently": "^7.4.0",
    "cp": "^0.2.0",
    "lite-server": "^2.6.1",
    "mkdir": "^0.0.2",
    "nodemon": "^2.0.20",
    "rimraf": "^3.0.2"
  }
}
